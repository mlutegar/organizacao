{
  "name": "organizacao-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web": "yarn workspace @organizacao/web dev",
    "mobile": "yarn workspace @organizacao/mobile start",
    "build:web": "yarn workspace @organizacao/web build",
    "build:mobile": "yarn workspace @organizacao/mobile build",
    "lint": "yarn workspaces run lint",
    "type-check": "yarn workspaces run type-check"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
